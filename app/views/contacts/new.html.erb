<%= form_with(url: contacts_send_email_path) do |form| %>
  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, required: true %>
  </div>

  <div class="field">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, required: true %>
  </div>

  <div class="field">
    <%= label_tag :message %>
    <%= text_area_tag :message, nil, required: true %>
  </div>

  <div class="actions">
    <%= submit_tag 'Send Message' %>
  </div>
<% end %>
